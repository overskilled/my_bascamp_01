            <li class="nav__item"><%= link_to 'Sign out', destroy_user_session_path,:method => :delete %></li>
        <%else%>
            <li class="nav__item"><%= link_to "Login", new_user_session_path %>
            <li class="nav__item"><%= link_to "Sign Up", new_user_registration_path %>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
