

<!DOCTYPE html>
<html>
  <head>
    <title>MyBasecamp1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    
    <p>You are a [<%= current_user.role %>]</p>
    <% if current_user.admin? %>
    There are <%= User.count %> user in the system
    <% end %>
    <p class="alert"><%= alert %></p>


    <section class="container">
      <h2 class='title'>PROJECTS</h2>
      <hr>
      <center>
        <div class="row">
          <%= render partial: 'projects/all_projects', locals: { all_projects: @all_projects } %>
          <%= render partial: 'projects/created_by_me', locals: { created_by_me_projects: @created_by_me_projects } %>
          <%= render partial: 'projects/shared_with_me', locals: { shared_with_me_projects: @shared_with_me_projects } %>
        </div>
      </center>
    </section>


    <%= yield %>
  </body>
</html>


