

<!DOCTYPE html>
<html>
  <head>
    <title>MyBasecamp1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        
        <h2>Welcome to BaseCamp <%= link_to current_user.username, user_path(current_user.id) %></h2>
        <p>You are a [<%= current_user.role %>]</p>
        <% if current_user.admin? %>
        There are <%= User.count %> user in the system
        <% end %>
        <%= link_to 'Toggle Role', toggle_role_path, method: :get %>


    <%= yield %>
  </body>
</html>


