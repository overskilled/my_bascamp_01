<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h6 class="card-title space">
      <label>
        <form method="get" action="<%= project_path(project) %>" class="show">
          <input type="hidden" name="ppid" value="<%= project.id %>">
          <input type="submit" value=<%= project.name %> class="submit"><br>
          <sub><%= project.creator.username %></sub>
        </form>
      </label>
      <form method="get" action="<%= edit_project_path(project) %>">
        <input type="hidden" name="ppid" value="<%= project.id %>">
        <input type="image" alt="Submit" width="20px" src="https://img.icons8.com/windows/32/000000/settings--v1.png"/>
      </form>
    </h6>
    <hr>
    <h6 class="card-subtitle mb-2 text-muted">
      <form method="get" action="<%= project_path(project) %>" class="show">
        <input type="hidden" name="ppid" value="<%= project.id %>">
        <input type="submit" value="<%= project.description %>" class="submit">
      </form>
    </h6>
    <hr>
    <div class="buttom space">
      <label>
        <img width="20px" src="https://img.icons8.com/ios-filled/50/000000/group-foreground-selected.png"/>
        <span><%= @user.project_count %></span>
      </label>
      <form method="post" action="<%= project_path(project) %>" class="btn btn-danger">
        <%= hidden_field_tag :_method, :delete %>
        <input type="hidden" name="pid" value="<%= project.id %>">
        <input type="image" alt="Submit" width="20px" src="https://img.icons8.com/wired/64/000000/filled-trash.png"/>
      </form>
    </div>
  </div>
</div>
<br>

