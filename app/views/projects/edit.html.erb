            <div class="form-check form-switch">
                <%= form.check_box :admin, class: "form-check-input", id: "mySwitch", value: "yes" %>
                <%= form.label :admin, "Admin", class: "form-check-label", for: "mySwitch" %>
            </div>

            <%= form.submit "Add User", class: "btn btn-primary" %>
        <% end %>-->
      <form method="post" action="<%= add_user_project_path(@project) %>">
        <label>Add Member (email)</label>
        <div class="update">
          <input type="email" name="email" class="text_input" required>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="mySwitch" name="admin" value="yes" checked>
            <label class="form-check-label" for="mySwitch">Admin</label>
          </div>
          <button type="submit" class="btn  btn-primary">
            <img width="20px" src="https://img.icons8.com/ios-filled/50/000000/group-foreground-selected.png"/>
          </button>
        </div>
      </form>
      <center>
        <form method="post" action="<%= project_path(@project) %>" inputs>
          <input type="hidden" name="_method" value="delete">
          <input class="submit" type="submit" value="Delete project" style="background: red">
        </form>
      </center>
    </div>
        <div style="width: 50rem; background: white; border-radius: 10px;">
    <p style="text-align: center">All Members</p>
    <% if @members.present? %>
        <% @members.each do |member| %>
        <div class="update">
            <p>
            &nbsp; &nbsp; <%= member.username %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <% if member.admin? %>Admin<% else %>Not Admin<% end %>
            <form method="post" action="<%= update_user_project_path(@project) %>">

            </form>
            </p>
        </div>
        <% end %>
    <% end %>
  </form>
</section>
