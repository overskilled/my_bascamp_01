<section class="create_project">
  <h1>Edit project</h1>
  <form class="inputs">
    <div>
      <form method="post" action="<%= edit_project_name_project_path(@project) %>">
        <label>Name</label>
        <div class="update">
          <input type="text" name="project_name" value="<%= @project.name %>" class="text_input" required>
          <input class="update_button" type="submit" value="Update Name">
        </div>
      </form>
    </div><br>
    <div>
      <form method="post" action="<%= edit_project_desc_project_path(@project) %>">
        <label>Description</label>
        <div class="update">
          <textarea class="textarea" name="description" cols="62" rows="2" class="" required><%= @project.description %></textarea>
          <input class="update_button" type="submit" value="Update Description">
        </div>
      </form>
    </div><br>
    <div style="width: 43rem;">
    <!--
        <%= form_with(url: add_user_project_path(@project), method: :post) do |form| %>
            <%= form.label :email, "Add Member (email)" %>
