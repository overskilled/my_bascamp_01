<div class="col-sm">
  <h5 class="top">
    <img width="20px" src="https://img.icons8.com/ios/50/000000/medical-id.png"/>
    All projects
  </h5><br>
  <% if Project.any? %>
    <% Project.all.each do |project| %>
          <%= render 'projects/project_card', project: project %>
    <% end %>
  <% else %>
    <p>No projects available.</p>
  <% end %>
</div>
